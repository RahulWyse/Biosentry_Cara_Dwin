<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666"

    android:orientation="vertical">

    <EditText
        android:id="@+id/activiation_code"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="249dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="ACTIVATION CODE"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textColorHint="#ccc"
        android:textSize="30sp" />

    <Button
        android:id="@+id/donebtn"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_below="@+id/activiation_code"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_text"
        android:gravity="center_vertical|center_horizontal|center"
        android:text="ACTIVATE"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/donebtn"
        android:id="@+id/lictext"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="This is licensed version of BioSentry Cara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/lictext"
        android:id="@+id/macid"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:text="00-0a-25-dd-ff-ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>